<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    tools:context=".LogIn">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/et_signin_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/splashForeground"
        android:textSize="@dimen/fontSizeNormal"/>

    <EditText
        android:id="@+id/et_signin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:textColor="@color/splashForeground"
        android:textSize="@dimen/fontSizeNormal"/>



    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="LogIn"
        android:textSize="@dimen/fontSizeNormal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/splashForeground"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/tv_signin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New? Sign up"
        android:textSize="@dimen/fontSizeNormal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv_signin_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password? Reset here!"
        android:textSize="@dimen/fontSizeNormal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:clickable="true"
        />


</LinearLayout>